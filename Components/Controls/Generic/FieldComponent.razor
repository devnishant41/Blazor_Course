<div class="row mb-3 input-width">
    <div class="col-2">
        <label class="col-form-label">Name</label>
    </div>
    <div class="col-6">
        @Control
    </div>
    <div class="col">
        @ValidationControl
    </div>
</div>



@code {

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public RenderFragment? Control { get; set; }

    [Parameter]
    public RenderFragment? ValidationControl { get; set; }


}
